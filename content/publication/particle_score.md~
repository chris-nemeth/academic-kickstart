title = "Particle Metropolis-adjusted Langevin algorithm"
date = 2016-09-01T00:00:00

# Authors. Comma separated list, e.g. `["Bob Smith", "David Jones"]`.
authors = ["Nemeth, C.", "Sherlock, C.","Fearnhead, P."]

